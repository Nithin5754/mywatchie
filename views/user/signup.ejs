<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="dist/output.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <script defer src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"></script>
</head>
<style>
  .stytle_091 {
 
    background-color: blue;


    background-color: rgba(109, 142, 146, 0.759);
    border-radius: 20px;
    backdrop-filter: blur(4px);
    box-shadow: 0 0 20px white;


  }

  .font091 {
    color: rgb(41, 40, 40);
    text-align: center;
  }
  @media (max-width: 640px) {
      .style_091 {
        width: 90vw;
      
      }
    }
</style>

<body class="bg-white dark:bg-slate-800 text-slate-900 dark:text-white">

  <div class=" w-full min-h-screen flex items-center justify-center"
  style="background-image: url('<%= randomBannerImage %>'); background-size: cover; background-position: center; background-repeat: no-repeat;">

    <div class="stytle_091 w-full sm:w-11/12 md:w-3/4 lg:w-2/3 xl:w-[500px] 2xl:w-[550px] mx-auto px-4 sm:px-8 py-8 rounded-lg shadow-2xl style_091">

      <h2 class="text-center text-2xl font-extrabold tracking-wide font091 text-white">Sign Up</h2>
      <p class="text-center text-sm text-gray-600 mt-2">Already have an account? <a href="/login"
          class="text-blue-600 hover:text-blue-700 hover:underline" title="Sign In">Login here</a></p>

      <form class="my-8 text-sm" action="/signup" method="post" onsubmit="return validateForm()">
        <div class="mb-4">
          <label for="name" class="block text-gray-700">Username</label>
          <input type="text" name="username" id="name"
            class="mt-1 p-2 w-full border border-gray-300 focus:outline-none focus:ring-0 focus:border-gray-300 rounded text-sm text-gray-900"
            placeholder="Enter your name" oninput="validateName()">
          <p id="nameValidation" class="text-red-700"></p>
        </div>

        <div class="mb-4">
          <label for="email" class="block text-gray-700">Email Address</label>
          <input type="text" name="email" id="email"
            class="mt-1 p-2 w-full border border-gray-300 focus:outline-none focus:ring-0 focus:border-gray-300 rounded text-sm text-gray-900"
            placeholder="Enter your email" oninput="validateEmail()">
          <p id="emailValidationMessage" class="text-red-700"></p>
        </div>

        <div class="mb-4">
          <label for="number" class="block text-gray-700">Mobile Number</label>
          <input type="number" name="number" id="form3Example4" minlength="3" maxlength="6"
            pattern="^[a-zA-Z_$][a-zA-Z_$0-9]*$"
            class="mt-1 p-2 w-full border border-gray-300 focus:outline-none focus:ring-0 focus:border-gray-300 rounded text-sm text-gray-900"
            placeholder="Enter your number" oninput="validateMobile()">
          <p id="mobileValidationMessage" class="text-red-700"></p>
        </div>

        <!-- ... (rest of the form) ... -->

        <div class="mb-4">
          <label for="password" class="block text-gray-700">Password</label>
          <div x-data="{ show: false }" class="relative flex items-center mt-1">
            <input :type="show ? 'text' : 'password'" name="password" id="form3Example5"
              class="flex-1 p-2 border border-gray-300 focus:outline-none focus:ring-0 focus:border-gray-300 rounded text-sm text-gray-900"
              placeholder="Enter your password" type="password">
            <button @click="show = !show" type="button"
              class="absolute right-2 bg-transparent flex items-center justify-center text-gray-700">
              <svg x-show="!show" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21">
                </path>
              </svg>

              <svg x-show="show" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                xmlns="http://www.w3.org/2000/svg" style="display: none;">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z">
                </path>
              </svg>
            </button>
          </div>
        </div>

        <!-- ... (rest of the form) ... -->

        <div class="mb-4">
          <label for="password_confirmation" class="block text-gray-700">Password Confirmation</label>
          <div x-data="{ show: false }" class="relative flex items-center mt-1">
            <input :type="show ? 'text' : 'password'" name="confirmPassword" id="form3Example6"
              class="flex-1 p-2 border border-gray-300 focus:outline-none focus:ring-0 focus:border-gray-300 rounded text-sm text-gray-900"
              placeholder="Enter your password again" type="password">
            <button @click="show = !show" type="button"
              class="absolute right-2 bg-transparent flex items-center justify-center text-gray-700">
              <svg x-show="!show" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21">
                </path>
              </svg>

              <svg x-show="show" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                xmlns="http://www.w3.org/2000/svg" style="display: none;">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z">
                </path>
              </svg>
            </button>
          </div>
          <p id="passwordMatchMessage" class="text-red-600"></p>
        </div>

        <!-- ... (rest of the form) ... -->

        <div class="mb-4">
          <div class="flex items-center">
            <input type="checkbox" name="remember_me" id="remember_me" class="mr-2 focus:ring-0 rounded">
            <label for="remember_me" class="text-gray-700">I accept the <a href="#"
                class="text-blue-600 hover:text-blue-700 hover:underline">terms</a> and <a href="#"
                class="text-blue-600 hover:text-blue-700 hover:underline">privacy policy</a></label>
          </div>
        </div>

        <div class="mb-4">
          <div class="flex items-center justify-center space-x-4">
            <button type="submit"
              class="bg-blue-600 hover:bg-blue-700 rounded-lg px-8 py-2 text-gray-100 hover:shadow-xl transition duration-150 uppercase">
              Sign Up
            </button>
          </div>
        </div>

      </form>
    </div>
  </div>

 <!-- Alpine.js and Swiper JS scripts -->
  <script src="https://cdn.jsdelivr.net/npm/alpinejs@2.8.2/dist/alpine.js" defer></script>
<script src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.x.x/dist/alpine.min.js" ></script>
  <script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"></script>
  <!-- font-awesome -->
  <script src="https://kit.fontawesome.com/72e1a8d80d.js" crossorigin="anonymous"></script>
  <script src="/js/swiper.js"></script>
  <script src="/js/search.js"></script>


  <script>
        function validateForm() {
            return validateName()&& validateEmail() && validateMobile() && validatePasswords();
          }


          function validateName() {
    const nameInput = document.getElementById("name");
    const nameValidationMessage = document.getElementById("nameValidation");
    const nameValue = nameInput.value;

    // Remove any existing validation message
    nameValidationMessage.textContent = "";

    if (!isValidName(nameValue)) {
      // Name is invalid
      nameValidationMessage.textContent = "Please enter a valid name without spaces.";
      return false;
    }

    return true;
  }

  function isValidName(nameValue) {
    // Use a regular expression to check if the name contains only letters and may include hyphens or apostrophes
    const nameRegex = /^[a-zA-Z'-]+$/;
    return nameRegex.test(nameValue);
  }


          function validateEmail() {
    const emailInput = document.getElementById("email");
    const emailValidationMessage = document.getElementById("emailValidationMessage");
    const emailValue = emailInput.value;

    // Remove any existing validation message
    emailValidationMessage.textContent = "";

    if (!isValidEmail(emailValue)) {
      // Email is invalid
      emailValidationMessage.textContent = "Please enter a valid email address.";
      return false;
    }

    return true;
  }

  function isValidEmail(emailValue) {
    // Use a regular expression for basic email format validation
    const emailRegex = /^[a-zA-Z0-9._-]+@[a-zA-Z0-9.-]+\.[a-zA-Z]{3,4}$/;
    return emailRegex.test(emailValue);
  }



          function validateMobile() {
            const mobileInput = document.getElementById("form3Example4");
            const mobileValidationMessage = document.getElementById(
              "mobileValidationMessage"
            );
            const mobileValue = mobileInput.value;

            // Remove any existing validation message
            mobileValidationMessage.textContent = "";

            if (!isValidMobile(mobileValue)) {
              // Mobile number is invalid
              mobileValidationMessage.textContent =
                "Please enter a valid 10-digit mobile number.";
              return false;
            }

            return true;
          }

          function isValidMobile(mobileValue) {
            return /^[0-9]{10}$/.test(mobileValue);
          }




            function validatePasswords() {
                const passwordInput = document.getElementById("form3Example5");
                const confirmPasswordInput = document.getElementById("form3Example6");
                const passwordMatchMessage = document.getElementById(
                  "passwordMatchMessage"
                );
                const passwordValue = passwordInput.value;
                const confirmPasswordValue = confirmPasswordInput.value;

                // Remove any existing validation message
                passwordMatchMessage.textContent = "";

                if (!arePasswordsMatching(passwordValue, confirmPasswordValue)) {
                  passwordMatchMessage.textContent = "Passwords do not match.";
                  return false;
                }

                return true;
              }

              function arePasswordsMatching(password, confirmPassword) {
                return password === confirmPassword;
              }

              document
                .getElementById("form3Example6")
                .addEventListener("input", validatePasswords);

  </script>


</body>

</html>