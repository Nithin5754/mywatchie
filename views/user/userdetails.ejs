<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Details - E-commerce</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.15/dist/tailwind.min.css" rel="stylesheet">
<link rel="stylesheet" href="/css/darkmode.css">
</head>

<body class="bg-gray-100 dark-mode">
  <!-- Navigation Bar -->
  <nav class="bg-white p-4 shadow-md">
    <div class="container mx-auto flex justify-between items-center">
      <a href="#" class="text-2xl font-bold text-gray-800">E-commerce</a>
      <ul class="flex space-x-4">
        <li><a href="#" class="text-gray-600 hover:text-gray-800">Home</a></li>
        <li><a href="#" class="text-gray-600 hover:text-gray-800">Products</a></li>
        <li><a href="#" class="text-gray-600 hover:text-gray-800">Profile</a></li>
        <li><a href="#" class="text-gray-600 hover:text-gray-800">Logout</a></li>
      </ul>
    </div>
  </nav>

  <!-- User Details -->
  <main>
    <section class="bg-gray-100">
      <div class="container mx-auto py-12 px-4">
        <div class="bg-white rounded-lg shadow-md p-6">
          <div class="flex flex-col md:flex-row items-center md:space-x-6">
            <!-- User Profile Image -->
            <div class="w-full md:w-1/3 text-center md:text-left">
              <!-- Edit Photo Button -->
              <a href="/userProfileAddForm"
                class="bg-blue-500 hover:bg-blue-600 text-white mt-4 py-2 px-4 rounded-md shadow-md transition duration-300 ease-in-out">
                Edit Photo
              </a>
              <!-- User Profile Picture -->
              <div
                class="relative inline-block group overflow-hidden rounded-full border-4 border-blue-500 hover:shadow-xl transition duration-300 ease-in-out mt-8">
                <img src="<%= verifyUserEmail.user_image_url %>" alt="User Profile"
                  class="w-64 h-64 mx-auto md:mx-0 object-cover object-center transform group-hover:scale-105 transition duration-300 ease-in-out">
                <div
                  class="absolute bottom-0 right-0 bg-blue-500 text-white p-2 rounded-full transform translate-x-2 translate-y-2 group-hover:translate-x-0 group-hover:translate-y-0 transition duration-300 ease-in-out">
                </div>
              </div>
            </div>

            <!-- User Information -->
            <div class="w-full md:w-2/3 mt-6 md:mt-0">
              <div class="bg-gray-100 p-6 rounded-lg border border-gray-300">
                <h1 class="text-3xl font-semibold text-gray-800 mb-4">
                  <% if (verifyUserEmail && verifyUserEmail.username) { %>
                    <%= verifyUserEmail.username %>
                      <% } %>
                </h1>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                  <!-- Email -->
                  <div>
                    <p class="text-gray-600 text-lg">Email:</p>
                    <p class="text-gray-800 text-lg font-semibold">
                      <%= verifyUserEmail.email %>
                    </p>
                  </div>

                  <!-- Phone -->
                  <div>
                    <p class="text-gray-600 text-lg">Phone:</p>
                    <p class="text-gray-800 text-lg font-semibold">
                      <%= verifyUserEmail.mobileNumber %>
                    </p>
                  </div>

                  <!-- Address -->
                  <div class="overflow-x-auto">
                    <table class="min-w-full">
                      <thead>
                        <tr>
                          <th class="text-left text-2xl font-semibold">Primary Address</th>
                          <th></th>
                        </tr>
                      </thead>
                      <tbody>
                        <tr>
                          <td class="py-4">
                            <table class="mt-2 w-full">
                              <tr>
                                <td class="text-gray-600 text-lg font-semibold">Address
                                  line-1:</td>
                                <td class="text-gray-800 text-lg">
                                  <h1 class="truncate w-80">
                                    <%= isAddressTheir.premanant_address %>
                                  </h1>
                                </td>
                              </tr>
                              <tr>
                                <td class="text-gray-600 text-lg font-semibold">City:</td>
                                <td class="text-gray-800 text-lg">
                                  <%= isAddressTheir.city %>
                                </td>
                              </tr>
                              <tr>
                                <td class="text-gray-600 text-lg font-semibold">Postal
                                  Code:</td>
                                <td class="text-gray-800 text-lg">
                                  <%= isAddressTheir.postalCode %>
                                </td>
                              </tr>
                              <tr>
                                <td class="text-gray-600 text-lg font-semibold">Country:</td>
                                <td class="text-gray-800 text-lg">
                                  <%= isAddressTheir.country %>
                                </td>
                              </tr>
                            </table>
                          </td>
                        </tr>
                      </tbody>
                    </table>
                  </div>
                  <a href="/userDetails/address">
                    <button
                      class="bg-blue-500 hover:bg-emerald-700 text-white mt-6 py-2 px-4 rounded-md shadow-md transition duration-300 ease-in-out">
                      Add Address
                    </button>
                  </a>
                  <a href='/userDetails/primaryAddress'>
                    <button
                      class="bg-blue-500 hover:bg-emerald-700 text-white mt-6 py-2 px-4 rounded-md shadow-md transition duration-300 ease-in-out">
                      Select Primary Address
                    </button>
                  </a>
                </div>
                <a href="/userDetails/detailsEdit">
                  <button
                    class="bg-blue-500 hover:bg-blue-600 text-white mt-6 py-2 px-4 rounded-md shadow-md transition duration-300 ease-in-out">
                    Edit Profile
                  </button>
                </a>
              </div>
            </div>
          </div>

          <!-- Order History -->
          <div class="mt-8">
            <h2 class="text-2xl font-semibold text-gray-800 mb-4">Order History</h2>

            <!-- Order Entries -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <!-- Order Entry 1 -->
              <div class="bg-gray-100 p-4 rounded-lg border border-gray-300">
                <div class="flex justify-between items-center mb-2">
                  <p class="text-lg font-semibold text-gray-800">Order ID: #12345</p>
                  <p class="text-gray-600">Date: Jan 15, 2023</p>
                </div>
                <p class="text-gray-600">Total: $100.00</p>
                <a href="#" class="text-blue-500 hover:underline mt-2 block">View Details</a>
              </div>

              <!-- Order Entry 2 -->
              <div class="bg-gray-100 p-4 rounded-lg border border-gray-300">
                <div class="flex justify-between items-center mb-2">
                  <p class="text-lg font-semibold text-gray-800">Order ID: #67890</p>
                  <p class="text-gray-600">Date: Feb 20, 2023</p>
                </div>
                <p class="text-gray-600">Total: $75.50</p>
                <a href="#" class="text-blue-500 hover:underline mt-2 block">View Details</a>
              </div>
              <!-- Add more order entries as needed -->
            </div>
          </div>
        </div>
      </div>
    </section>

  </main>
    <script src="/js/darkmode.js"></script>
</body>

</html>