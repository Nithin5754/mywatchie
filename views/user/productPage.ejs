<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>mywatchie.com</title>
  <link rel="stylesheet" href="dist/output.css">
      <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.15/dist/tailwind.min.css" rel="stylesheet">

  <!-- Link Swiper's CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css"/>


  <!-- googlr icons materials -->
  <link rel="stylesheet"
    href="https://fonts.googleapis.com/css2?family=Material+Symbols+Sharp:opsz,wght,FILL,GRAD@48,400,0,0" />

</head>

<body class=" scroll-smooth capitalize bg-slate-300">


<%- include('./partials/header.ejs') %>




<main>
  <h1 class="text-center font-extrabold text-3xl mt-20">PRODUCT LIST</h1>
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 content-center">
    <% productLists.forEach((element, index)=> { %>
      <div
        class="mx-3 w-80 mt-6 p-4 flex flex-col self-start rounded-lg bg-white shadow-md dark:bg-neutral-700 sm:shrink-0 sm:grow sm:basis-0">
        <a href="/productList/details/<%= element._id %>">
          <div class="relative h-64 overflow-hidden rounded-t-lg">
      
            <img id="image" class="object-cover object-center w-full h-full"
              src="<%= element.product_image_url %>" alt="<%= element.product_image_url %>" />
          </div>
        </a>
        <div class="text-center text-xl font-extrabold text-gray-700 mt-1">
           <h2><%= element.product_name %></h2>
        </div>

        <div class="p-6 text-center">
          <h5 class="mb-2 text-xl font-medium leading-tight text-neutral-800 dark:text-neutral-50">
            <%= element.product_category %>
          </h5>
          <div class="flex justify-center items-center mb-4">
            <span class="text-2xl font-extrabold text-gray-700 mr-2">$<%= element.product_price %></span>
            <span class="text-2xl font-medium text-gray-500">
              <%= element.product_discount %>%
            </span>
          </div>
          <div class="flex justify-center space-x-4">
  
            <button type="button"
              class="px-4 py-2 text-xs font-medium uppercase text-white bg-green-600 rounded-full hover:bg-green-700 transition duration-300 ease-in-out">
              Buy
            </button>
            <button type="button"
              class="px-4 py-2 text-xs font-medium uppercase text-white bg-red-600 rounded-full hover:bg-red-700 transition duration-300 ease-in-out">
              Add To Cart
            </button>
          </div>
        </div>
      </div>
      <% }) %>
  </div>
</main>






    <!-- Alpine.js and Swiper JS scripts -->
    <script src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.x.x/dist/alpine.min.js" defer></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"></script>
    <!-- font-awesome -->
    <script src="https://kit.fontawesome.com/72e1a8d80d.js" crossorigin="anonymous"></script>
    <script src="/js/swiper.js"></script>
    <script src="/js/search.js"></script>



</body>

</html>