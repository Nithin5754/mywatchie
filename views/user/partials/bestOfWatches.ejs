<!-- Swiper -->



<div class="swiper bestProduct">
  <div class="swiper-wrapper">
      <% productAvailable.forEach((prod) => { %>





        <div class="swiper-slide relative m-4 ml-10 mb-10 md:m-4 lg:m-8 flex w-full h-auto max-w-xs flex-col overflow-hidden rounded-lg border border-gray-100 bg-white shadow-md   ">
          <% if(isLogin){ %>
            <a href="/productList/details/<%= prod._id %>" class="w-96">
              <img class="object-contain object-center w-full sm:h-48 md:h-52 lg:h-60" src="<%= prod.product_image_url[0] %>" alt="product image" />
          </a>
        <%  } else{ %>
          <a href="/login" class="w-96">
            <img class="object-contain object-center w-full sm:h-48 md:h-52 lg:h-60" src="<%= prod.product_image_url[0] %>" alt="product image" />
        </a>
      <%  }%>
     
          <div class="px-5 pb-5">
              <a href="#">
                  <h5 class="text-xl font-semibold tracking-tight text-gray-900 clamp-lines" ><%= prod.product_name %></h5>
              </a>
              <a href="#">
                <h5 class="text-xl font-medium tracking-tight text-gray-700 clamp-lines" ><%= prod.product_description %></h5>
            </a>
              <div class="flex items-center mt-2.5 mb-5">
               
                  <span class="bg-blue-100 text-blue-800 text-xs font-semibold px-2.5 py-0.5 rounded dark:bg-blue-200 dark:text-blue-800 ms-3"><%= prod.product_rating  %></span>
              </div>
              <div class="flex items-center justify-between">
                <span class="text-3xl font-bold  <%= prod.product_discount === 0 ? 'text-gray-900 ' : 'line-through text-gray-400  text-xl' %> "   >
                  $<%= prod.product_price %>
                </span>
                <span class="text-3xl font-bold text-gray-900">
                  <% if (prod.product_discount > 0) { %>
                    $<%= (prod.product_price - (prod.product_price * prod.product_discount / 100)).toFixed(2) %>
                  <% } %>
                </span>
              </div>
              
          </div>
      </div>
      
      


     
        
        <% }); %>
        
        
      </div>
      <div class="swiper-button-next "></div>
      <div class="swiper-button-prev"></div>
      <div class="swiper-pagination "></div>
    </div>
    
    <!-- Swiper JS -->
    
