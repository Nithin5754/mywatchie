

  <div class="flex flex-row justify-around items-center flex-wrap  gap-5">
  
    <% randomCategory.forEach((element, index) => { %>
      <div class="flex flex-col justify-around items-center p-2 rounded-lg bg-gray-200 border shadow-[0_2px_15px_-3px_rgba(0,0,0,0.07),0_10px_20px_-2px_rgba(0,0,0,0.04)] dark:bg-neutral-700 sm:w-60 m-6 sm:h-80 md:w-72 md:h-96">
        <div class="relative overflow-hidden bg-cover bg-no-repeat">
          <% if (isLogin) { %>
            <a href="/productList/<%= element.product_category %>">
              <img class="rounded-t-lg w-full sm:w-48" src="<%= element.category_img_url %>" alt="" />
            </a>
          <% } else { %>
            <a href="/login">
              <img class="rounded-t-lg w-full sm:w-48" src="<%= element.category_img_url %>" alt="" />
            </a>
          <% } %>
        </div>
        <div class="bg-gray-200 p-2 text-center">
          <h1 class="font-extrabold text-lg md:text-xl">
            <%= element.product_category %>
          </h1>
        </div>
      </div>
    <% }); %>
    

</div> 












